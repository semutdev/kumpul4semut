    margin-bottom: 2em;
    border-collapse: collapse;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  }

  .prose th {
    background-color: #f9fafb;
    font-weight: 600;
    padding: 1em;
    border: 1px solid #e5e7eb;
