---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogCard from '../components/BlogCard.astro';
import { SITE_CONFIG } from '../config';
import { sortPostsByDate, filterDrafts } from '../content/config';

// Fetch all blog posts
const allPosts = await getCollection('blog');

// Filter out drafts and sort by date
const publishedPosts = sortPostsByDate(filterDrafts(allPosts));

// Get featured post (latest post)
const featuredPost = publishedPosts[0];

// Get recent posts (excluding featured)
const recentPosts = publishedPosts.slice(1, 13); // Get up to 12 posts
---

<BaseLayout
  title={SITE_CONFIG.site.title}
  description={SITE_CONFIG.site.description}
>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 mt-0">
          {SITE_CONFIG.site.title}
        </h1>
        <p class="text-xl md:text-2xl text-gray-700 mb-8 max-w-3xl mx-auto">
          {SITE_CONFIG.site.description}
        </p>
        <div class="flex justify-center gap-4">
          <a
            href="/blog"
            class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors no-underline"
          >
            Read the Blog
          </a>
          <a
            href="/about"
            class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-50 transition-colors no-underline border border-blue-600"
          >
            About Me
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Post -->
  {featuredPost && (
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Featured Post</h2>
      <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
        <div class="md:grid md:grid-cols-2 gap-6">
          {featuredPost.data.heroImage && (
            <div class="h-64 md:h-auto overflow-hidden">
              <img
                src={featuredPost.data.heroImage}
                alt={featuredPost.data.title}
                class="w-full h-full object-cover"
                loading="eager"
              />
            </div>
          )}
          <div class={`p-6 flex flex-col justify-center ${!featuredPost.data.heroImage ? 'md:col-span-2' : ''}`}>
            <h3 class="text-2xl font-bold text-gray-900 mb-3 mt-0">
              <a
                href={`/blog/${featuredPost.slug}`}
                class="hover:text-blue-600 transition-colors no-underline"
              >
                {featuredPost.data.title}
              </a>
            </h3>
            <p class="text-gray-700 mb-4">
              {featuredPost.data.description}
            </p>
            <div class="flex items-center text-sm text-gray-600 mb-4">
              <time datetime={featuredPost.data.pubDate.toISOString()}>
                {new Intl.DateTimeFormat('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                }).format(featuredPost.data.pubDate)}
              </time>
            </div>
            {featuredPost.data.tags && featuredPost.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {featuredPost.data.tags.slice(0, 4).map((tag) => (
                  <a
                    href={`/tags/${tag}`}
                    class="inline-block px-3 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full hover:bg-blue-200 transition-colors no-underline"
                  >
                    {tag}
                  </a>
                ))}
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Recent Posts Grid -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-bold text-gray-900">Recent Posts</h2>
      {recentPosts.length >= 12 && (
        <a
          href="/blog"
          class="text-blue-600 hover:text-blue-700 font-medium no-underline"
        >
          View all posts â†’
        </a>
      )}
    </div>

    {recentPosts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {recentPosts.map((post) => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            slug={post.slug}
            heroImage={post.data.heroImage}
            tags={post.data.tags}
          />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-600 text-lg">
          No posts yet. Check back soon!
        </p>
      </div>
    )}

    {recentPosts.length > 0 && recentPosts.length < 12 && (
      <div class="text-center mt-8">
        <a
          href="/blog"
          class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors no-underline"
        >
          View All Posts
        </a>
      </div>
    )}
  </section>

  <Footer slot="footer" />
</BaseLayout>
