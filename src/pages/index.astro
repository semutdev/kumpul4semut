---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BlogCard from "../components/BlogCard.astro";
import AdSense from "../components/AdSense.astro";
import { SITE_CONFIG } from "../config";
import { sortPostsByDate, filterDrafts } from "../content/config";

// Fetch all blog posts
const allPosts = await getCollection("blog");

// Filter out drafts and sort by date
const publishedPosts = sortPostsByDate(filterDrafts(allPosts));

// Get recent posts
const recentPosts = publishedPosts.slice(0, 6);
---

<BaseLayout
  title={SITE_CONFIG.site.title}
  description={SITE_CONFIG.site.description}
>
  <Header slot="header" />

  <!-- Hero Section - Simple & Personal -->
  <section class="hero-section">
    <div class="hero-container">
      <!-- Greeting -->
      <p class="hero-greeting">ðŸ‘‹ Hai, saya</p>

      <!-- Name -->
      <h1 class="hero-name">Jujun Jamaludin</h1>

      <!-- Tagline -->
      <p class="hero-tagline">
        Programmer otodidak dari <span class="highlight"
          >Dayeuhluhur, Cilacap</span
        >
      </p>

      <!-- Story -->
      <p class="hero-story">
        Ini tempat saya nulis pengalaman koding â€” dari zaman cari tutorial via
        blog, YouTube, sampai sekarang zaman AI. Sekarang kerja di
        <a
          href="https://kurmamedia.com"
          target="_blank"
          rel="noopener"
          class="company-link">Kurmamedia</a
        >.
      </p>
      <!-- CTA Buttons -->
      <div class="hero-cta">
        <a href="/blog" class="btn-primary"> ðŸ“– Baca Catatan </a>
        <a href="/about" class="btn-secondary"> Tentang Saya </a>
      </div>
    </div>
  </section>

  <!-- Recent Posts Section -->
  <section class="posts-section">
    <div class="posts-container">
      <h2 class="posts-title">Catatan Terbaru</h2>

      {
        recentPosts.length > 0 ? (
          <div class="posts-grid">
            {recentPosts.map((post) => (
              <BlogCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                slug={post.slug}
                tags={post.data.tags}
              />
            ))}
          </div>
        ) : (
          <div class="posts-empty">
            <p>Belum ada catatan. Segera hadir! ðŸš€</p>
          </div>
        )
      }

      {
        publishedPosts.length > 6 && (
          <div class="posts-more">
            <a href="/blog" class="btn-view-all">
              Lihat Semua Catatan â†’
            </a>
          </div>
        )
      }
    </div>
  </section>

  <!-- AdSense Advertisement - Before Footer -->
  <section class="py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <AdSense
        slot={SITE_CONFIG.adsense.slotIds.home}
        format="horizontal"
        className="home-ad"
      />
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Hero Section */
  .hero-section {
    background: var(--color-bg);
    padding: 6rem 1rem 5rem;
    text-align: center;
    border-bottom: 1px solid var(--color-border);
  }

  .hero-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-greeting {
    font-size: 1.1rem;
    color: var(--color-text-light);
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .hero-name {
    font-size: 3.5rem;
    font-weight: 900;
    color: var(--color-text);
    margin: 0 0 1rem 0;
    letter-spacing: -0.04em;
    line-height: 1.1;
  }

  .hero-tagline {
    font-size: 1.25rem;
    color: var(--color-text);
    margin-bottom: 1.5rem;
    font-weight: 400;
  }

  .highlight {
    font-weight: 600;
    border-bottom: 2px solid var(--color-text);
    padding-bottom: 2px;
  }

  .hero-story {
    font-size: 1.15rem;
    color: var(--color-text-light);
    line-height: 1.7;
    margin-bottom: 2.5rem;
    max-width: 580px;
    margin-left: auto;
    margin-right: auto;
  }

  .company-link {
    color: var(--color-text);
    font-weight: 600;
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
  }

  .company-link:hover {
    background: var(--color-bg-secondary);
  }

  /* Journey Timeline */
  .journey-timeline {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .journey-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    background: var(--color-bg);
  }

  .journey-icon {
    font-size: 1.25rem;
    filter: grayscale(100%);
  }

  .journey-text {
    font-size: 0.85rem;
    color: var(--color-text);
    font-weight: 600;
  }

  .journey-arrow {
    color: var(--color-text-light);
    font-size: 1.25rem;
  }

  /* CTA Buttons */
  .hero-cta {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    background: var(--color-text);
    color: var(--color-bg);
    font-weight: 600;
    border-radius: 4px; /* More square for clean look */
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    background: var(--color-text-light);
    transform: translateY(-2px);
    text-decoration: none;
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 0.875rem 2rem;
    background: transparent;
    color: var(--color-text);
    font-weight: 600;
    border: 1px solid var(--color-text);
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    background: var(--color-bg-secondary);
    text-decoration: none;
  }

  /* Posts Section */
  .posts-section {
    padding: 5rem 1rem;
    background: var(--color-bg);
  }

  .posts-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .posts-title {
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-text);
    margin: 0 0 3rem 0;
    text-align: center;
    letter-spacing: -0.03em;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 3rem; /* More space */
  }

  .posts-empty {
    text-align: center;
    padding: 4rem;
    color: var(--color-text-light);
    font-size: 1.2rem;
    border: 1px dashed var(--color-border);
    border-radius: 8px;
  }

  .posts-more {
    text-align: center;
    margin-top: 4rem;
  }

  .btn-view-all {
    display: inline-block;
    padding: 0.75rem 2rem;
    background: transparent;
    color: var(--color-text);
    font-weight: 600;
    border: 1px solid var(--color-border);
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-view-all:hover {
    border-color: var(--color-text);
    background: var(--color-bg-secondary);
    text-decoration: none;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .hero-section {
      padding: 9rem 1rem 4rem;
    }

    .hero-name {
      font-size: 2.5rem;
    }

    .hero-tagline {
      font-size: 1.15rem;
    }

    .hero-story {
      font-size: 1rem;
    }

    .journey-arrow {
      display: none;
    }

    .journey-timeline {
      gap: 0.75rem;
    }

    .journey-item {
      padding: 0.5rem 0.75rem;
      width: 100%; /* Stack on mobile if needed or just smaller */
      flex-direction: row;
      justify-content: center;
    }
  }
</style>
